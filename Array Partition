class Solution {
    public int arrayPairSum(int[] nums) {
    Arrays.sort(nums);
    int sum =0;
    int min =Integer.MAX_VALUE;
    int i =0;
    int j=i+1;
    while(i<nums.length&&j<nums.length)
    {
       min = Math.min(nums[i],nums[j]);
       sum = sum+min;
       i+=2;
       j+=2;
    }
    return sum;
    }
}
