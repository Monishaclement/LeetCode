class Solution {
    public int[] sortArrayByParity(int[] nums) {
        int n = nums.length;
        int i =0;
        int j = nums.length-1;
        
        while(i<j)
        {
            if(nums[i]%2!=0&&nums[j]%2==0)
            {
               int temp = nums[j];
                nums[j]=nums[i];
                nums[i]=temp;
                i++;
                j--;
            }
            
            
            
            else
            {
                if(nums[i]%2==0)
                {
                    i++;
                }
                else
                {
                j--;
                }
            }
        }
        return nums;
}
}
